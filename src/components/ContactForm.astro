            <!-- Name -->
            <div class="form-group">
              <div class="relative">
                <div class="absolute left-4 top-1/2 -translate-y-1/2 text-gray-400">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                  </svg>
                </div>
                <input
                  type="text"
                  name="nombre"
                  id="nombre"
                  placeholder=" "
                  required
                  class="form-input pl-12"
                />
                <label for="nombre" class="form-label left-12">
                  Nombre completo <span class="text-red-400">*</span>
                </label>
              </div>
            </div>

            <!-- Email -->
            <div class="form-group">
              <div class="relative">
                <div class="absolute left-4 top-1/2 -translate-y-1/2 text-gray-400">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                  </svg>
                </div>
                <input
                  type="email"
                  name="email"
                  id="email"
                  placeholder=" "
                  required
                  class="form-input pl-12"
                />
                <label for="email" class="form-label left-12">
                  Correo electr√≥nico <span class="text-red-400">*</span>
                </label>
              </div>
            </div>
          </div>

          <!-- Phone & Procedure Row -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <!-- Phone -->
            <div class="form-group">
              <div class="relative">
                <div class="phone-input-wrapper">
                  <select
                    name="indicativo"
                    class="form-select-code"
                  >
                    {countryCodes.map((country) => (
                      <option value={country.code} selected={country.code === '+57'}>
                        {country.flag} {country.code}
                      </option>
                    ))}
                  </select>
                  <input
                    type="tel"
                    name="telefono"
                    id="telefono"
                    placeholder="N√∫mero de celular"
                    required
                    class="form-input-phone"
                  />
                </div>
                <label class="form-label-phone">
                  Celular <span class="text-red-400">*</span>
                </label>
              </div>
            </div>

            <!-- Procedure -->
            <div class="form-group">
              <div class="relative">
                <select
                  name="procedimiento"
                  id="procedimiento"
                  required
                  class="form-select-procedure"
                >
                  <option value="" disabled selected>Selecciona un procedimiento</option>
                  {procedures.map((group) => (
                    <optgroup label={group.group}>
                      {group.items.map((item) => (
                        <option value={item}>{item}</option>
                      ))}
                    </optgroup>
                  ))}
                  <option value="Otro">Otro procedimiento...</option>
                </select>
                <label class="form-label-procedure">
                  Procedimiento de inter√©s <span class="text-red-400">*</span>
                </label>
              </div>
            </div>
          </div>

          <!-- Message -->
          <div class="form-group">
            <div class="relative">
              <div class="absolute left-4 top-4 text-gray-400">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
                </svg>
              </div>
              <textarea
                name="comentarios"
                id="comentarios"
                rows="4"
                placeholder=" "
                required
                class="form-input form-textarea pl-12"
              ></textarea>
