---

<section class="py-12 md:py-16 bg-gradient-to-b from-white to-primary-50" id="contactForm">
  <div class="container-premium">
    <div class="max-w-3xl mx-auto">
      <!-- Header -->
      <div class="text-center mb-10 animate-on-scroll">
        <h2 class="font-serif text-3xl md:text-4xl font-semibold text-gray-800 mb-3">
          {title}
        </h2>
        <p class="text-lg text-primary-600 font-medium">{subtitle}</p>
        <p class="text-sm text-gray-500 mt-4 max-w-xl mx-auto">
