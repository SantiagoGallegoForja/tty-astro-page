        <ul class="space-y-3">
          {quickLinks.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-white/70 text-sm hover:text-white hover:pl-2 transition-all duration-200 inline-flex items-center gap-2 group"
              >
                <svg class="w-4 h-4 opacity-0 -ml-6 group-hover:opacity-100 group-hover:ml-0 transition-all duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Column 3: Procedures -->
      <div>
        <h3 class="font-serif text-lg font-semibold mb-6 flex items-center gap-2">
          <span class="w-8 h-0.5 bg-gold"></span>
          Procedimientos
        </h3>
        <ul class="space-y-3">
          {procedureLinks.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-white/70 text-sm hover:text-white hover:pl-2 transition-all duration-200 inline-flex items-center gap-2 group"
              >
                <svg class="w-4 h-4 opacity-0 -ml-6 group-hover:opacity-100 group-hover:ml-0 transition-all duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
