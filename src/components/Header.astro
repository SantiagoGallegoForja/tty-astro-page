<script>
  document.addEventListener('DOMContentLoaded', () => {
    const toggle = document.getElementById('menuToggle');
    const close = document.getElementById('closeMenu');
    const mobileMenu = document.getElementById('mobileMenu');
    const overlay = document.getElementById('menuOverlay');
    const mobileCTA = document.getElementById('mobileCTA');
    const header = document.getElementById('mainHeader');

    // Open mobile menu
    const openMenu = () => {
      mobileMenu?.classList.remove('translate-x-full');
      mobileMenu?.setAttribute('aria-hidden', 'false');
      overlay?.classList.remove('opacity-0', 'invisible');
      overlay?.classList.add('opacity-100', 'visible');
      toggle?.setAttribute('aria-expanded', 'true');
      document.body.style.overflow = 'hidden';
    };

    // Close mobile menu
    const closeMenu = () => {
      mobileMenu?.classList.add('translate-x-full');
      mobileMenu?.setAttribute('aria-hidden', 'true');
      overlay?.classList.add('opacity-0', 'invisible');
      overlay?.classList.remove('opacity-100', 'visible');
      toggle?.setAttribute('aria-expanded', 'false');
      document.body.style.overflow = '';
    };

    toggle?.addEventListener('click', openMenu);
    close?.addEventListener('click', closeMenu);
    overlay?.addEventListener('click', closeMenu);
    mobileCTA?.addEventListener('click', closeMenu);

    // Mobile accordions
    document.querySelectorAll('[data-accordion]').forEach(btn => {
      btn.addEventListener('click', () => {
        const targetId = btn.getAttribute('data-accordion');
        const content = document.getElementById(`accordion-${targetId}`);
        const isHidden = content?.classList.contains('hidden');

        // Close other accordions
        document.querySelectorAll('.accordion-content').forEach(el => {
          if (el !== content) el.classList.add('hidden');
        });
        document.querySelectorAll('[data-accordion]').forEach(el => {
          if (el !== btn) el.closest('.mobile-accordion')?.classList.remove('accordion-open');
        });

        // Toggle current
        content?.classList.toggle('hidden', !isHidden);
        btn.closest('.mobile-accordion')?.classList.toggle('accordion-open', isHidden);
      });
    });

    // Header shadow on scroll + hide top bar
    const topBar = document.getElementById('top-bar-nav');
    let lastScroll = 0;
    window.addEventListener('scroll', () => {
      const currentScroll = window.scrollY;

      if (currentScroll > 10) {
        header?.classList.add('scrolled');
        // Ocultar top bar al hacer scroll
        if (topBar) {
          topBar.style.height = '0';
          topBar.style.padding = '0';
          topBar.style.overflow = 'hidden';
          topBar.style.opacity = '0';
        }
      } else {
        header?.classList.remove('scrolled');
        // Mostrar top bar cuando est√° arriba
        if (topBar) {
          topBar.style.height = '';
          topBar.style.padding = '';
          topBar.style.overflow = '';
          topBar.style.opacity = '1';
        }
      }

      lastScroll = currentScroll;
    }, { passive: true });

    // Close menu on escape key
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') closeMenu();
    });
  });
</script>
