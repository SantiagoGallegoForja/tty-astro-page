---
/**
 * Premium Button Component
 * Reusable button with multiple variants and sizes
 */

interface Props {
  variant?: 'primary' | 'secondary' | 'dark' | 'gold' | 'ghost' | 'link';
  size?: 'sm' | 'md' | 'lg' | 'xl';
  href?: string;
  type?: 'button' | 'submit' | 'reset';
  fullWidth?: boolean;
  disabled?: boolean;
  loading?: boolean;
  icon?: 'arrow' | 'phone' | 'calendar' | 'whatsapp' | 'play' | 'none';
  iconPosition?: 'left' | 'right';
  class?: string;
  id?: string;
  target?: '_blank' | '_self';
  rel?: string;
  ariaLabel?: string;
}

const {
  variant = 'primary',
  size = 'md',
  href,
  type = 'button',
  fullWidth = false,
  disabled = false,
  loading = false,
  icon = 'none',
  iconPosition = 'right',
  class: className = '',
  id,
  target,
  rel,
  ariaLabel,
} = Astro.props;

// Base styles
const baseStyles = `
  relative inline-flex items-center justify-center gap-2
  font-semibold rounded-full
  transition-all duration-300 ease-out
  focus:outline-none focus:ring-2 focus:ring-offset-2
  disabled:opacity-50 disabled:cursor-not-allowed disabled:pointer-events-none
`;

// Size variants
const sizes = {
  sm: 'px-5 py-2 text-sm',
  md: 'px-7 py-3 text-sm',
  lg: 'px-8 py-3.5 text-base',
  xl: 'px-10 py-4 text-lg',
};

// Variant styles
const variants = {
  primary: `
    bg-gradient-to-r from-primary to-primary-hover
    text-white shadow-soft
    hover:shadow-glow-primary hover:scale-[1.02]
    focus:ring-primary
    active:scale-[0.98]
  `,
  secondary: `
    bg-transparent border-2 border-primary
    text-dark
    hover:bg-primary-50 hover:border-primary-hover
    focus:ring-primary
    active:scale-[0.98]
  `,
  dark: `
    bg-gradient-to-r from-dark to-dark-hover
    text-white shadow-soft
    hover:shadow-soft-lg hover:scale-[1.02]
    focus:ring-dark
    active:scale-[0.98]
  `,
  gold: `
    bg-gradient-to-r from-gold to-gold-400
    text-white shadow-soft
    hover:shadow-glow-gold hover:scale-[1.02]
    focus:ring-gold
    active:scale-[0.98]
  `,
  ghost: `
    bg-transparent
    text-dark
    hover:bg-primary-50
    focus:ring-primary
    active:scale-[0.98]
  `,
  link: `
    bg-transparent px-0 py-0
    text-primary-600 underline-offset-4
    hover:text-primary-700 hover:underline
    focus:ring-0
  `,
};

// Combine all classes
const buttonClasses = [
  baseStyles,
  sizes[size],
  variants[variant],
  fullWidth ? 'w-full' : '',
  className,
].join(' ');

// Icon SVGs
const icons = {
  arrow: `<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/></svg>`,
  phone: `<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/></svg>`,
  calendar: `<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/></svg>`,
  whatsapp: `<svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/></svg>`,
  play: `<svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M8 5v14l11-7z"/></svg>`,
  none: '',
};

const iconHtml = icon !== 'none' ? icons[icon] : '';

// Determine element type
const Element = href ? 'a' : 'button';
---

{href ? (
  <a
    href={href}
    class={buttonClasses}
    id={id}
    target={target}
    rel={target === '_blank' ? (rel || 'noopener noreferrer') : rel}
    aria-label={ariaLabel}
  >
    {loading && (
      <svg class="animate-spin -ml-1 mr-2 h-4 w-4" fill="none" viewBox="0 0 24 24">
        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
      </svg>
    )}
    {iconPosition === 'left' && iconHtml && <Fragment set:html={iconHtml} />}
    <slot />
    {iconPosition === 'right' && iconHtml && <Fragment set:html={iconHtml} />}
  </a>
) : (
  <button
    type={type}
    class={buttonClasses}
    id={id}
    disabled={disabled || loading}
    aria-label={ariaLabel}
  >
    {loading && (
      <svg class="animate-spin -ml-1 mr-2 h-4 w-4" fill="none" viewBox="0 0 24 24">
        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
      </svg>
    )}
    {iconPosition === 'left' && iconHtml && <Fragment set:html={iconHtml} />}
    <slot />
    {iconPosition === 'right' && iconHtml && <Fragment set:html={iconHtml} />}
  </button>
)}
