---
/**
 * Premium ProcedureLayout - SEO Optimizado
 * Layout para páginas de procedimientos con Schema.org MedicalProcedure y FAQPage
 */
import BaseLayout from './BaseLayout.astro';
import ContactForm from '@components/ContactForm.astro';
import CTABanner from '@components/CTABanner.astro';
import FAQAccordion from '@components/FAQAccordion.astro';
import TrustBadges from '@components/TrustBadges.astro';

interface ProcedureDetail {
  icon: string;
  label: string;
  value: string;
}

interface FAQ {
  question: string;
  answer: string;
}

interface Props {
  // SEO Props
  title: string;
  metaDescription?: string;
  keywords?: string;
  // Content Props
  procedureName: string;
  subtitle: string;
  description: string[];
  heroImage: string;
  videoUrl?: string;
  videoType?: 'youtube' | 'mp4';
  secondaryVideos?: string[];
  benefits?: string[];
  details?: ProcedureDetail[];
  beforeAfterImages?: string[];
  faqs?: FAQ[];
  faqImage?: string;
  ctaTitle?: string;
  ctaSubtitle?: string;
  ctaImage?: string;
  pricingText?: string;
  technologySection?: {
    title: string;
    subtitle: string;
    backgroundImage: string;
    columns: { title: string; text: string }[];
  };
  candidatesSection?: {
    subtitle: string;
    title: string;
    description: string;
    items: string[];
    image: string;
  };
  typesSection?: {
    title: string;
    types: {
      title: string;
      description: string;
      image: string;
    }[];
  };
  implantTypesSection?: {
    title: string;
    videoUrl: string;
    tables: {
      title: string;
      items: string[];
    }[];
  };
}

const {
  title,
  metaDescription,
  keywords,
  procedureName,
  subtitle,
  description,
  heroImage,
  videoUrl,
  videoType = 'youtube',
  secondaryVideos = [],
  benefits = [],
  details = [],
  beforeAfterImages = [],
  faqs = [],
  faqImage,
  ctaTitle,
  ctaSubtitle,
  ctaImage = 'https://lightcyan-monkey-822204.hostingersite.com/wp-content/uploads/2025/05/mujer-cama.webp',
  pricingText,
  technologySection,
  candidatesSection,
  typesSection,
  implantTypesSection
} = Astro.props;

// Generar meta description si no se proporciona
const seoDescription = metaDescription || `${procedureName} en Medellín con la Dra. Daniela Correa. ${description[0]?.replace(/<[^>]*>/g, '').substring(0, 120)}...`;

// Schema.org - MedicalProcedure
const procedureSchema = {
  "@context": "https://schema.org",
  "@type": "MedicalProcedure",
  "name": procedureName,
  "alternateName": subtitle,
  "description": description.map(d => d.replace(/<[^>]*>/g, '')).join(' '),
  "image": heroImage,
  "url": `https://thetrueyou.com.co${Astro.url.pathname}`,
  "procedureType": "https://health-lifesci.schema.org/CosmeticProcedure",
  "bodyLocation": subtitle.toLowerCase().includes('facial') ? 'Face' :
                  subtitle.toLowerCase().includes('mamari') ? 'Breast' :
                  subtitle.toLowerCase().includes('corporal') ? 'Body' : 'Body',
  "preparation": "Consulta de valoración previa con la Dra. Daniela Correa",
  "followup": "Control postoperatorio incluido",
  "howPerformed": description[1]?.replace(/<[^>]*>/g, '') || description[0]?.replace(/<[^>]*>/g, ''),
  "status": "https://health-lifesci.schema.org/ActiveNotRecruiting",
  "study": {
    "@type": "MedicalStudy",
    "status": "ResultsAvailable"
  },
  "recognizingAuthority": {
    "@type": "Organization",
    "name": "Sociedad Colombiana de Cirugía Plástica"
  },
  "relevantSpecialty": {
    "@type": "MedicalSpecialty",
    "name": "Plastic Surgery"
  },
  "performer": {
    "@type": "Physician",
    "name": "Dra. Daniela Correa",
    "medicalSpecialty": "PlasticSurgery",
    "telephone": "+573332841861"
  },
  "location": {
    "@type": "MedicalClinic",
    "name": "The True You - Cirugía Plástica",
    "address": {
      "@type": "PostalAddress",
      "streetAddress": "Km 2,2 Via Llanogrande-Aeropuerto, Portanova Medical Center, OF 320-21",
      "addressLocality": "Rionegro",
      "addressRegion": "Antioquia",
      "addressCountry": "CO"
    }
  }
};

// Schema.org - FAQPage (si hay FAQs)
const faqSchema = faqs.length > 0 ? {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": faqs.map(faq => ({
    "@type": "Question",
    "name": faq.question,
    "acceptedAnswer": {
      "@type": "Answer",
      "text": faq.answer
    }
  }))
} : null;

// Combinar schemas
const combinedSchema = faqSchema ? [procedureSchema, faqSchema] : procedureSchema;

// Icon mapping for details
const getIcon = (iconName: string) => {
  const icons: Record<string, string> = {
    clock: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>',
    calendar: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>',
    hospital: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>',
    check: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>',
    star: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"/>'
  };
  return icons[iconName] || icons.check;
};
---

<BaseLayout
  title={title}
  description={seoDescription}
  keywords={keywords}
  ogImage={heroImage}
  schema={combinedSchema}
>
  <!-- Hero Section -->
  <section class="w-full bg-cream py-16 md:py-24" data-hero-section>
    <div class="container-premium">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16 items-center">
        <!-- Image -->
        <div class="relative animate-on-scroll order-2 lg:order-1">
          <!-- Decorative elements -->
          <div class="absolute -top-6 -left-6 w-32 h-32 bg-primary-200/50 rounded-full blur-3xl"></div>
          <div class="absolute -bottom-6 -right-6 w-40 h-40 bg-gold/20 rounded-full blur-3xl"></div>

          <div class="relative">
            <!-- Frame -->
            <div class="absolute -inset-4 bg-gradient-to-br from-primary-200 via-primary-100 to-gold/30 rounded-3xl"></div>
            <img
              src={heroImage}
              alt={procedureName}
              class="relative w-full rounded-2xl shadow-2xl object-cover"
            />

            <!-- Badge -->
            <div class="absolute -bottom-5 -right-5 bg-white rounded-2xl shadow-xl p-4 border border-primary-100">
              <div class="flex items-center gap-3">
                <div class="w-12 h-12 rounded-full bg-primary flex items-center justify-center">
                  <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                  </svg>
                </div>
                <div>
                  <p class="font-semibold text-dark text-sm">Certificación</p>
                  <p class="text-xs text-dark/60">Internacional</p>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Content -->
        <div class="animate-on-scroll order-1 lg:order-2">
          <span class="inline-flex items-center gap-2 px-4 py-2 bg-primary-100 rounded-full text-sm font-medium text-primary-700 mb-6">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"/>
            </svg>
            {subtitle}
          </span>

          <h1 class="font-serif text-3xl md:text-4xl lg:text-5xl font-bold text-dark leading-tight mb-6">
            ¿Qué es <span class="text-primary">{procedureName}</span>?
          </h1>

          <div class="space-y-4 mb-8">
            {description.map(p => (
              <p class="text-lg text-dark/70 leading-relaxed" set:html={p} />
            ))}
          </div>

          <div class="flex flex-wrap gap-4">
            <a href="#contactForm" class="btn-primary scroll-to-contact">
              Cotizar {procedureName}
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
              </svg>
            </a>
            {videoUrl && (
              <a href="#video" class="btn-secondary">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                Ver Video
              </a>
            )}
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Types Section -->
  {typesSection && (
    <section class="w-full bg-white py-16 md:py-24" data-types-section>
      <div class="container-premium">
        <div class="text-center mb-12 animate-on-scroll">
          <h2 class="font-serif text-2xl md:text-3xl lg:text-4xl font-bold text-dark">
            {typesSection.title}
          </h2>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-5xl mx-auto">
          {typesSection.types.map((type) => (
            <div class="bg-light rounded-2xl overflow-hidden shadow-lg hover:shadow-xl transition-all duration-300 group animate-on-scroll">
              <div class="aspect-[4/3] overflow-hidden">
                <img
                  src={type.image}
                  alt={type.title}
                  class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                  loading="lazy"
                />
              </div>
              <div class="p-6">
                <h3 class="font-semibold text-lg text-dark mb-2">{type.title}</h3>
                <p class="text-dark/70 text-sm">{type.description}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Video Section -->
  {videoUrl && (
    <section class="w-full bg-white py-16 md:py-20" id="video" data-video-section>
      <div class="container-premium">
        <div class="max-w-4xl mx-auto">
          <!-- Header -->
          <div class="text-center mb-10 animate-on-scroll">
            <span class="inline-flex items-center gap-2 px-4 py-2 bg-primary-100 rounded-full text-sm font-medium text-primary-700 mb-4">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"/>
              </svg>
              Video Informativo
            </span>
            <h2 class="font-serif text-2xl md:text-3xl font-bold text-dark">
              Conoce más sobre {procedureName}
            </h2>
          </div>

          <!-- Video Container -->
          <div class="relative rounded-2xl overflow-hidden shadow-2xl animate-on-scroll">
            <div class="absolute -inset-1 bg-gradient-to-r from-primary-200 via-gold/30 to-primary-200 rounded-3xl blur opacity-50"></div>
            <div class="relative bg-dark rounded-2xl overflow-hidden">
              {videoType === 'youtube' ? (
                <iframe
                  class="w-full aspect-video"
                  src={videoUrl}
                  title={procedureName}
                  frameborder="0"
                  allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                  allowfullscreen
                ></iframe>
              ) : (
                <video src={videoUrl} controls class="w-full aspect-video object-cover"></video>
              )}
            </div>
          </div>

          <!-- Secondary Videos -->
          {secondaryVideos.length > 0 && (
            <div class="mt-10 animate-on-scroll">
              <p class="text-center text-dark/60 text-sm mb-6">
                Te invitamos a seguirnos en nuestro Canal de Youtube, donde encontrarás contenido útil sobre la Cirugía Plástica.
              </p>
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                {secondaryVideos.map((video) => (
                  <div class="rounded-xl overflow-hidden shadow-lg">
                    <iframe
                      class="w-full aspect-video"
                      src={video}
                      title="Video adicional"
                      frameborder="0"
                      allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                      allowfullscreen
                    ></iframe>
                  </div>
                ))}
              </div>
            </div>
          )}
        </div>
      </div>
    </section>
  )}

  <!-- CTA Banner -->
  {ctaTitle && (
    <CTABanner
      title={ctaTitle}
      subtitle={ctaSubtitle}
      backgroundImage={ctaImage}
      variant="standard"
      overlay="gradient"
      showTrustBadge={true}
      trustText="Más de 3,000 procedimientos exitosos"
    />
  )}

  <!-- Implant Types Section -->
  {implantTypesSection && (
    <section class="w-full bg-white py-16 md:py-24" data-implant-types-section>
      <div class="container-premium">
        <div class="max-w-4xl mx-auto">
          <h2 class="font-serif text-2xl md:text-3xl lg:text-4xl font-bold text-dark text-center mb-10 animate-on-scroll">
            {implantTypesSection.title}
          </h2>

          <!-- Video -->
          <div class="relative rounded-2xl overflow-hidden shadow-xl mb-10 animate-on-scroll">
            <iframe
              src={implantTypesSection.videoUrl}
              title={implantTypesSection.title}
              class="w-full aspect-video"
              frameborder="0"
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
              allowfullscreen
            ></iframe>
          </div>

          <!-- Tables -->
          <div class="space-y-6 animate-on-scroll">
            {implantTypesSection.tables.map((table) => (
              <div class="border border-gray-200 rounded-xl overflow-hidden">
                <div class="bg-cream px-6 py-4 font-semibold text-dark">
                  {table.title}
                </div>
                <div class="px-6 py-4 bg-white">
                  <ul class="space-y-3 text-dark/70 text-sm">
                    {table.items.map((item) => (
                      <li class="flex items-start gap-2">
                        <span class="text-primary mt-1">•</span>
                        <span>{item}</span>
                      </li>
                    ))}
                  </ul>
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>
  )}

  <!-- Candidates Section -->
  {candidatesSection && (
    <section class="w-full bg-white py-16 md:py-24" data-candidates-section>
      <div class="container-premium">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16 items-center">
          <!-- Content -->
          <div class="animate-on-scroll">
            <span class="inline-flex items-center gap-2 px-4 py-2 bg-primary-100 rounded-full text-sm font-medium text-primary-700 mb-6">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
              </svg>
              {candidatesSection.subtitle}
            </span>

            <h2 class="font-serif text-2xl md:text-3xl lg:text-4xl font-bold text-dark leading-tight mb-6">
              {candidatesSection.title}
            </h2>

            <p class="text-dark/70 mb-6 leading-relaxed" set:html={candidatesSection.description} />

            <ul class="space-y-3 mb-8">
              {candidatesSection.items.map((item) => (
                <li class="flex items-start gap-3">
                  <span class="flex-shrink-0 w-6 h-6 rounded-full bg-primary-100 flex items-center justify-center mt-0.5">
                    <svg class="w-4 h-4 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                    </svg>
                  </span>
                  <span class="text-dark/70">{item}</span>
                </li>
              ))}
            </ul>
          </div>

          <!-- Image -->
          <div class="animate-on-scroll order-first lg:order-last">
            <div class="relative">
              <div class="absolute -inset-4 bg-gradient-to-br from-primary-100 via-cream to-gold/20 rounded-3xl"></div>
              <img
                src={candidatesSection.image}
                alt={candidatesSection.title}
                class="relative w-full rounded-2xl shadow-xl object-cover"
                loading="lazy"
              />
            </div>
          </div>
        </div>
      </div>
    </section>
  )}

  <!-- Details Section -->
  {details.length > 0 && (
    <section class="w-full bg-white py-16 md:py-24" data-details-section>
      <div class="container-premium">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16 items-center">
          <!-- Content -->
          <div class="animate-on-scroll">
            <span class="inline-flex items-center gap-2 px-4 py-2 bg-primary-100 rounded-full text-sm font-medium text-primary-700 mb-6">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
              </svg>
              {subtitle}
            </span>

            <h2 class="font-serif text-2xl md:text-3xl lg:text-4xl font-bold text-dark leading-tight mb-8">
              ¿Cuál es el objetivo de <span class="text-primary">{procedureName}</span>?
            </h2>

            <div class="space-y-4 mb-8">
              {details.map((detail, index) => (
                <div
                  class="flex items-start gap-4 p-4 bg-cream rounded-xl hover:shadow-md transition-shadow duration-300"
                  style={`animation-delay: ${index * 100}ms`}
                >
                  <div class="flex-shrink-0 w-12 h-12 rounded-xl bg-primary flex items-center justify-center">
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <Fragment set:html={getIcon(detail.icon)} />
                    </svg>
                  </div>
                  <div>
                    <p class="font-semibold text-dark mb-1">{detail.label}</p>
                    <p class="text-dark/60 text-sm">{detail.value}</p>
                  </div>
                </div>
              ))}
            </div>

            <a href="#contactForm" class="btn-primary scroll-to-contact">
              Agendar Consulta
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
              </svg>
            </a>
          </div>

          <!-- Stats/Trust -->
          <div class="animate-on-scroll">
            <div class="bg-gradient-to-br from-primary-100 via-cream to-gold/20 rounded-3xl p-8 md:p-10">
              <h3 class="font-serif text-2xl font-bold text-dark mb-6 text-center">¿Por qué elegirnos?</h3>

              <div class="grid grid-cols-2 gap-6">
                <div class="text-center p-4 bg-white rounded-2xl shadow-soft">
                  <div class="w-12 h-12 mx-auto rounded-full bg-primary-100 flex items-center justify-center mb-3">
                    <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                  </div>
                  <p class="font-serif text-3xl font-bold text-primary">10+</p>
                  <p class="text-sm text-dark/60">Años Experiencia</p>
                </div>

                <div class="text-center p-4 bg-white rounded-2xl shadow-soft">
                  <div class="w-12 h-12 mx-auto rounded-full bg-primary-100 flex items-center justify-center mb-3">
                    <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z"/>
                    </svg>
                  </div>
                  <p class="font-serif text-3xl font-bold text-primary">300+</p>
                  <p class="text-sm text-dark/60">Pacientes</p>
                </div>

                <div class="text-center p-4 bg-white rounded-2xl shadow-soft">
                  <div class="w-12 h-12 mx-auto rounded-full bg-primary-100 flex items-center justify-center mb-3">
                    <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
