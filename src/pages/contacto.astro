---
/**
 * Premium Contact Page
 * Conversion-optimized contact page with trust elements
 */
import BaseLayout from '@layouts/BaseLayout.astro';
import ContactForm from '@components/ContactForm.astro';
import FAQAccordion from '@components/FAQAccordion.astro';
import TrustBadges from '@components/TrustBadges.astro';

const contactFaqs = [
  {
    question: "¿Cuánto cuesta la consulta de valoración?",
    answer: "La consulta de valoración virtual tiene un costo de $180.000 COP y la consulta presencial $230.000 COP. Durante la consulta evaluaremos tus objetivos y te daremos un plan personalizado."
  },
  {
    question: "¿Cómo puedo agendar una cita?",
    answer: "Puedes agendar tu cita a través del formulario de contacto, llamando al +57 333 284 1861, o enviándonos un mensaje por WhatsApp. Te responderemos en menos de 24 horas."
  },
  {
    question: "¿Ofrecen consultas virtuales?",
    answer: "Sí, ofrecemos consultas virtuales para pacientes que no pueden visitarnos presencialmente. Puedes solicitar una videollamada con la Dra. Daniela para una evaluación inicial."
  },
  {
    question: "¿Cuáles son las formas de pago disponibles?",
    answer: "Aceptamos efectivo, tarjetas de crédito y débito, y transferencias bancarias. También ofrecemos opciones de financiación para facilitar tu inversión."
  }
];

const trustItems = [
  {
    icon: "certificate" as const,
    title: "Cirujana Certificada",
    description: "Miembro de la Sociedad Colombiana de Cirugía Plástica"
  },
  {
    icon: "clinic" as const,
    title: "Clínicas Acreditadas",
    description: "Operamos en clínicas con certificación JCI internacional"
  },
  {
    icon: "experience" as const,
    title: "10+ Años de Experiencia",
    description: "Miles de procedimientos exitosos realizados"
  },
  {
    icon: "patients" as const,
    title: "Acompañamiento Total",
    description: "Te acompañamos antes, durante y después de tu procedimiento"
  }
];
---

<BaseLayout
  title="Contacto | Agendar Cita Cirugía Plástica Medellín | The True You"
  description="Contacta a The True You. Agenda tu consulta de cirugía plástica en Medellín. WhatsApp +57 333 284 1861. Portanova Medical Center, Rionegro. Consultas virtuales disponibles."
  keywords="contacto cirugía plástica Medellín, agendar cita cirujano plástico, consulta cirugía estética, The True You teléfono, WhatsApp cirugía plástica Colombia, Portanova Medical Center"
>
  <!-- Hero Section -->
  <section class="w-full bg-gradient-to-br from-cream via-primary-50 to-cream py-16 md:py-20" data-contact-hero>
    <div class="container-premium">
      <div class="max-w-3xl mx-auto text-center animate-on-scroll">
        <!-- Badge -->
        <span class="inline-flex items-center gap-2 px-4 py-2 bg-primary-100 rounded-full text-sm font-medium text-primary-700 mb-6">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
          </svg>
          Estamos para ayudarte
        </span>

        <h1 class="font-serif text-3xl md:text-4xl lg:text-5xl font-bold text-dark leading-tight mb-6">
          Comienza Tu <span class="text-primary">Transformación</span> Hoy
        </h1>

        <p class="text-lg text-dark/70 leading-relaxed">
          Estamos aquí para resolver tus dudas y acompañarte en cada paso.
          Agenda tu consulta de valoración <strong>sin compromiso</strong>.
        </p>
      </div>
    </div>
  </section>

  <!-- Main Contact Section -->
  <section class="w-full bg-white py-16 md:py-24" data-contact-main>
    <div class="container-premium">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16">
        <!-- Left: Contact Form -->
        <div class="animate-on-scroll">
          <div class="sticky top-8">
            <ContactForm variant="compact" showMap={false} />
          </div>
        </div>

        <!-- Right: Contact Info -->
        <div class="animate-on-scroll" style="animation-delay: 150ms">
          <!-- Quick Contact Cards -->
          <div class="space-y-6 mb-10">
            <h2 class="font-serif text-2xl font-bold text-dark mb-6">Información de Contacto</h2>

            <!-- Phone -->
            <a href="tel:+573332841861" class="group flex items-start gap-4 p-5 bg-cream rounded-xl hover:shadow-lg transition-all duration-300">
              <div class="flex-shrink-0 w-14 h-14 rounded-xl bg-primary flex items-center justify-center group-hover:scale-110 transition-transform">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                </svg>
              </div>
              <div>
                <p class="font-semibold text-dark mb-1">Llámanos</p>
                <p class="text-primary font-medium text-lg">+57 333 284 1861</p>
                <p class="text-sm text-dark/60 mt-1">Lun - Vie: 8:00 AM - 6:00 PM</p>
              </div>
            </a>

            <!-- WhatsApp -->
            <a href="https://wa.me/573332841861?text=Hola%2C%20deseo%20agendar%20una%20cita" target="_blank" rel="noopener" class="group flex items-start gap-4 p-5 bg-cream rounded-xl hover:shadow-lg transition-all duration-300">
              <div class="flex-shrink-0 w-14 h-14 rounded-xl bg-[#25D366] flex items-center justify-center group-hover:scale-110 transition-transform">
                <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
                </svg>
              </div>
              <div>
                <p class="font-semibold text-dark mb-1">WhatsApp</p>
                <p class="text-[#25D366] font-medium text-lg">+57 333 284 1861</p>
                <p class="text-sm text-dark/60 mt-1">Respuesta inmediata</p>
              </div>
            </a>

            <!-- Email -->
            <a href="mailto:contactotty@gmail.com" class="group flex items-start gap-4 p-5 bg-cream rounded-xl hover:shadow-lg transition-all duration-300">
              <div class="flex-shrink-0 w-14 h-14 rounded-xl bg-gold flex items-center justify-center group-hover:scale-110 transition-transform">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
              </div>
              <div>
                <p class="font-semibold text-dark mb-1">Correo Electrónico</p>
                <p class="text-gold font-medium">contactotty@gmail.com | gerenciatty@gmail.com</p>
                <p class="text-sm text-dark/60 mt-1">Te respondemos en 24 horas</p>
              </div>
            </a>
          </div>

          <!-- Locations -->
          <div class="mb-10">
            <h3 class="font-serif text-xl font-bold text-dark mb-6">Nuestras Ubicaciones</h3>

            <div class="space-y-4">
              <!-- Location 1: Portanova -->
              <div class="p-5 bg-cream rounded-xl border border-primary-100">
                <div class="flex items-start gap-4">
                  <div class="flex-shrink-0 w-12 h-12 rounded-xl bg-primary-100 flex items-center justify-center">
                    <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                    </svg>
                  </div>
                  <div>
                    <p class="font-semibold text-dark">Portanova Medical Center</p>
                    <p class="text-sm text-dark/60 mt-1">Km 2,2 Via Llanogrande-Aeropuerto, OF 320-21</p>
                    <p class="text-sm text-dark/60">Rionegro, Antioquia</p>
                    <a href="https://maps.app.goo.gl/CyCxbGCHer4y8fq46" target="_blank" class="inline-flex items-center gap-1 text-primary text-sm font-medium mt-2 hover:underline">
                      Ver en mapa
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                      </svg>
                    </a>
                  </div>
                </div>
              </div>

              <!-- Location 2: Clínica Llanogrande -->
              <div class="p-5 bg-cream rounded-xl border border-primary-100">
                <div class="flex items-start gap-4">
                  <div class="flex-shrink-0 w-12 h-12 rounded-xl bg-primary-100 flex items-center justify-center">
                    <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                    </svg>
                  </div>
                  <div>
                    <p class="font-semibold text-dark">Clínica Llanogrande</p>
                    <p class="text-sm text-dark/60 mt-1">Torre Médica Clínica Llanogrande</p>
                    <p class="text-sm text-dark/60">Rionegro, Antioquia</p>
                    <a href="https://www.google.com/maps/place/Torre+m%C3%A9dica+Cl%C3%ADnica+llanogrande/@6.132081,-75.396073,16z/data=!4m6!3m5!1s0x8e469f458c24fe41:0x99c9cefe372d493!8m2!3d6.1320813!4d-75.3960733!16s%2Fg%2F11r6mbkpdf?hl=en-US&entry=ttu&g_ep=EgoyMDI2MDEwNy4wIKXMDSoKLDEwMDc5MjA2OUgBUAM%3D" target="_blank" class="inline-flex items-center gap-1 text-primary text-sm font-medium mt-2 hover:underline">
                      Ver en mapa
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                      </svg>
                    </a>
                  </div>
                </div>
              </div>

            </div>
          </div>

        </div>
      </div>
    </div>
  </section>

  <!-- Trust Section -->
  <section class="w-full bg-cream py-16 md:py-20" data-trust-section>
    <div class="container-premium">
      <div class="text-center mb-12 animate-on-scroll">
        <span class="inline-flex items-center gap-2 px-4 py-2 bg-gold/20 rounded-full text-sm font-medium text-gold mb-4">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
          </svg>
          ¿Por Qué Elegirnos?
        </span>

        <h2 class="font-serif text-2xl md:text-3xl lg:text-4xl font-bold text-dark leading-tight">
          Tu Confianza Es Nuestra <span class="text-primary">Prioridad</span>
        </h2>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 animate-on-scroll">
        {trustItems.map((item, index) => (
          <div
            class="p-6 bg-white rounded-2xl shadow-soft hover:shadow-lg transition-all duration-300 text-center group"
            style={`animation-delay: ${index * 100}ms`}
          >
            <div class="w-16 h-16 mx-auto rounded-full bg-primary-100 flex items-center justify-center mb-4 group-hover:scale-110 group-hover:bg-primary transition-all duration-300">
              {item.icon === 'certificate' && (
                <svg class="w-8 h-8 text-primary group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"/>
                </svg>
              )}
              {item.icon === 'clinic' && (
                <svg class="w-8 h-8 text-primary group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                </svg>
              )}
              {item.icon === 'experience' && (
                <svg class="w-8 h-8 text-primary group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              )}
              {item.icon === 'patients' && (
                <svg class="w-8 h-8 text-primary group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
                </svg>
              )}
            </div>
            <h3 class="font-semibold text-dark mb-2">{item.title}</h3>
            <p class="text-sm text-dark/60">{item.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <FAQAccordion
    title="Preguntas Frecuentes"
    subtitle="Sobre tu consulta"
    description="Resolvemos las dudas más comunes sobre nuestro proceso de atención"
    faqs={contactFaqs}
    variant="cards"
    showNumbers={true}
  />
</BaseLayout>

<style>
  /* Animate on scroll */
  .animate-on-scroll {
    opacity: 0;
    transform: translateY(30px);
    transition: opacity 0.8s ease-out, transform 0.8s ease-out;
  }

  [data-contact-hero].is-visible .animate-on-scroll,
  [data-contact-main].is-visible .animate-on-scroll,
  [data-trust-section].is-visible .animate-on-scroll {
    opacity: 1;
    transform: translateY(0);
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const sections = document.querySelectorAll('[data-contact-hero], [data-contact-main], [data-trust-section]');

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('is-visible');
        }
      });
    }, { threshold: 0.1 });

    sections.forEach(section => observer.observe(section));
  });
</script>
