---
import BaseLayout from '@layouts/BaseLayout.astro';
import HeroSlider from '@components/HeroSlider.astro';
import TrustBadges from '@components/TrustBadges.astro';
import GalleryCarousel from '@components/GalleryCarousel.astro';
import ProcessSteps from '@components/ProcessSteps.astro';
import CTABanner from '@components/CTABanner.astro';
import ContactForm from '@components/ContactForm.astro';

// Service cards data
const services = [
  {
    title: "Cirugías Corporales",
    description: "Moldea tu silueta y elimina las acumulaciones de grasa que se presentan en diferentes zonas del cuerpo.",
    href: "/liposuccion",
    icon: "body"
  },
  {
    title: "Cirugías Mamarias",
    description: "Realza, reduce o reconstruye para lograr la armonía que deseas con resultados naturales.",
    href: "/mamoplastia-de-aumento",
    icon: "breast"
  },
  {
    title: "Cirugías Faciales",
    description: "Rejuvenece, restaura, reconstruye y armoniza tu rostro con técnicas de vanguardia.",
    href: "/rinoplastia",
    icon: "face"
  },
  {
    title: "Mommy Makeover",
    description: "Recupera tu figura después del embarazo con procedimientos combinados personalizados.",
    href: "/mommy-makeover",
    icon: "mommy"
  }
];

// Team data
const team = [
  {
    name: "Dra. Daniela Correa",
    role: "Cirujana Plástica",
    image: "https://lightcyan-monkey-822204.hostingersite.com/wp-content/uploads/2025/05/daniela-2-1.webp",
    description: "Especialista en cirugía plástica, reconstructiva y estética con más de 10 años de experiencia."
  },
  {
    name: "Dr. Martín Quirós",
    role: "Médico Internista",
    image: "https://lightcyan-monkey-822204.hostingersite.com/wp-content/uploads/2025/05/martin-1.webp",
    description: "Especialista en medicina interna y evaluación prequirúrgica integral."
  }
];

// Clinics data
const clinics = [
  {
    name: "Portanova Medical Center",
    location: "En Medellín",
    description: "Centro médico con certificación internacional y los más altos estándares de seguridad.",
    image: "https://lightcyan-monkey-822204.hostingersite.com/wp-content/uploads/2025/06/1-1.webp",
    badge: "Joint Commission International"
  },
  {
    name: "Clínica Llanogrande",
    location: "En Rionegro",
    description: "Instalaciones de primer nivel en el oriente antioqueño con tecnología de punta.",
    image: "https://lightcyan-monkey-822204.hostingersite.com/wp-content/uploads/2025/05/rionegro-1.webp",
    badge: "Certificación Nacional"
  }
];
---

<BaseLayout
  title="Cirugía Plástica en Medellín | Dra. Daniela Correa | The True You"
  description="Cirugía plástica de excelencia en Medellín, Colombia. Especialistas en liposucción, rinoplastia, aumento mamario, abdominoplastia y mommy makeover. Dra. Daniela Correa - Clínica certificada JCI."
  keywords="cirugía plástica Medellín, cirujano plástico Colombia, liposucción Medellín, rinoplastia Colombia, aumento de senos Medellín, mamoplastia, abdominoplastia, mommy makeover, Dra Daniela Correa, clínica estética Medellín, cirugía estética Colombia, mejor cirujano plástico Medellín"
  ogImage="https://lightcyan-monkey-822204.hostingersite.com/wp-content/uploads/2025/05/mujer-cama.webp"
>

  <!-- Hero Slider -->
  <HeroSlider
    height="large"
    autoplayDelay={6000}
    slides={[
      {
        desktop: "https://lightcyan-monkey-822204.hostingersite.com/wp-content/uploads/2025/05/mujer-cama.webp",
        mobile: "https://lightcyan-monkey-822204.hostingersite.com/wp-content/uploads/2025/05/mujer-cama.webp",
        alt: "The True You - Cirugía Plástica Premium",
        title: "Tu Mejor Versión Te Espera",
        subtitle: "Cirugía Plástica de Excelencia",
        description: "Transformamos tu belleza natural con técnicas de vanguardia y resultados excepcionales.",
        ctaPrimary: { text: "Agendar Consulta", href: "#contactForm" },
        ctaSecondary: { text: "Conoce Nuestros Procedimientos", href: "#servicios" }
      },
      {
        desktop: "https://lightcyan-monkey-822204.hostingersite.com/wp-content/uploads/2025/06/daniela-bg.webp",
        mobile: "https://lightcyan-monkey-822204.hostingersite.com/wp-content/uploads/2025/06/daniela-bg.webp",
        alt: "Dra. Daniela Correa - Cirujana Plástica",
        title: "Experiencia y Confianza",
        subtitle: "Dra. Daniela Correa",
        description: "Más de una década dedicada a realzar la belleza natural de nuestros pacientes con resultados excepcionales.",
        ctaPrimary: { text: "Conoce a la Doctora", href: "/nosotros" },
        ctaSecondary: { text: "Ver Resultados", href: "#galeria" }
      },
      {
        desktop: "https://lightcyan-monkey-822204.hostingersite.com/wp-content/uploads/2025/06/Screenshot-2025-06-11-at-2.46.08-AM.png",
        mobile: "https://lightcyan-monkey-822204.hostingersite.com/wp-content/uploads/2025/06/Screenshot-2025-06-11-at-2.46.08-AM.png",
        alt: "Portanova Medical Center",
        title: "Instalaciones de Primer Nivel",
        subtitle: "Portanova Medical Center",
        description: "Tecnología de punta y los más altos estándares de seguridad para tu tranquilidad.",
        ctaPrimary: { text: "Conoce Nuestras Instalaciones", href: "/donde-opero" },
        ctaSecondary: { text: "Contactar", href: "/contacto" }
      }
    ]}
  />

  <!-- Trust Badges -->
  <TrustBadges
    variant="default"
    animate={false}
    badges={[
      { icon: "experience", value: 10, suffix: "+", label: "Años de Experiencia" },
      { icon: "patients", value: 300, suffix: "+", label: "Pacientes Satisfechos" },
      { icon: "certificate", value: 8, label: "Certificaciones" },
      { icon: "rating", value: 4.9, label: "Calificación Promedio" }
    ]}
  />

  <!-- Intro Section: Redescubre tu mejor versión -->
  <section class="w-full bg-white py-16 md:py-24" data-intro-section>
    <div class="container-premium">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16 items-center">
        <!-- Image -->
        <div class="relative animate-on-scroll order-2 lg:order-1">
          <div class="absolute -top-4 -left-4 w-32 h-32 bg-primary-200/50 rounded-full blur-3xl"></div>
          <div class="absolute -bottom-4 -right-4 w-40 h-40 bg-gold/20 rounded-full blur-3xl"></div>

          <div class="relative">
            <div class="absolute -inset-4 bg-gradient-to-br from-primary-200 via-primary-100 to-gold/30 rounded-3xl"></div>
            <img
              src="https://lightcyan-monkey-822204.hostingersite.com/wp-content/uploads/2025/05/Screenshot-2025-05-21-at-3.47.38%E2%80%AFPM.png"
              alt="The True You - Redescubre tu mejor versión"
              class="relative w-full rounded-2xl shadow-2xl"
              loading="lazy"
            />
          </div>
        </div>

        <!-- Content -->
        <div class="animate-on-scroll order-1 lg:order-2">
          <span class="inline-flex items-center gap-2 px-4 py-2 bg-primary-100 rounded-full text-sm font-medium text-primary-700 mb-6">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"/>
            </svg>
            Cirugía Plástica en Medellín
          </span>

          <h2 class="font-serif text-3xl md:text-4xl lg:text-5xl font-bold text-dark leading-tight mb-6">
            Redescubre Tu <span class="text-primary">Mejor Versión</span>
          </h2>

          <p class="text-lg text-dark/70 leading-relaxed mb-6">
            En <strong class="text-dark">The True You</strong>, te acompañamos en cada paso para lograr tus objetivos estéticos con seguridad y confianza. Nuestro enfoque personalizado garantiza resultados que realzan tu belleza natural.
          </p>

          <ul class="space-y-4 mb-8">
            <li class="flex items-center gap-3">
              <span class="flex-shrink-0 w-6 h-6 rounded-full bg-primary-100 flex items-center justify-center">
                <svg class="w-4 h-4 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
              </span>
              <span class="text-dark/80">Consulta de valoración personalizada</span>
            </li>
            <li class="flex items-center gap-3">
              <span class="flex-shrink-0 w-6 h-6 rounded-full bg-primary-100 flex items-center justify-center">
                <svg class="w-4 h-4 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
              </span>
              <span class="text-dark/80">Instalaciones con certificación internacional</span>
            </li>
            <li class="flex items-center gap-3">
              <span class="flex-shrink-0 w-6 h-6 rounded-full bg-primary-100 flex items-center justify-center">
                <svg class="w-4 h-4 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
              </span>
              <span class="text-dark/80">Acompañamiento integral pre y postoperatorio</span>
            </li>
          </ul>

          <div class="flex flex-wrap gap-4">
            <a href="#contactForm" class="btn-primary scroll-to-contact">
              Agenda Tu Consulta
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
              </svg>
            </a>
            <a href="/nosotros" class="btn-secondary">
              Conoce Más
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Section -->
  <section class="w-full bg-cream py-16 md:py-24" id="servicios" data-services-section>
    <div class="container-premium">
      <!-- Header -->
      <div class="text-center mb-12 animate-on-scroll">
        <span class="inline-flex items-center gap-2 px-4 py-2 bg-primary-100 rounded-full text-sm font-medium text-primary-700 mb-4">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"/>
          </svg>
          Nuestros Servicios
        </span>

        <h2 class="font-serif text-3xl md:text-4xl lg:text-5xl font-bold text-dark leading-tight mb-4">
          Procedimientos de <span class="text-primary">Excelencia</span>
        </h2>

        <p class="text-lg text-dark/70 leading-relaxed max-w-2xl mx-auto">
          Resaltamos tu belleza natural con las más avanzadas técnicas de cirugía plástica y resultados que superan expectativas.
        </p>
      </div>

      <!-- Service Cards -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 animate-on-scroll">
        {services.map((service, index) => (
          <a
            href={service.href}
            class="group relative bg-white rounded-2xl p-6 md:p-8 shadow-soft hover:shadow-xl transition-all duration-500 overflow-hidden border border-primary-100"
            style={`animation-delay: ${index * 100}ms`}
          >
            <!-- Background accent -->
            <div class="absolute top-0 right-0 w-32 h-32 bg-gradient-to-bl from-primary-100/50 to-transparent rounded-bl-full"></div>

            <!-- Icon -->
            <div class="relative z-10 w-16 h-16 rounded-2xl bg-primary-100 flex items-center justify-center mb-6 group-hover:bg-primary group-hover:scale-110 transition-all duration-300">
              {service.icon === 'body' && (
                <svg class="w-8 h-8 text-primary group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                </svg>
              )}
              {service.icon === 'breast' && (
                <svg class="w-8 h-8 text-primary group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
                </svg>
              )}
              {service.icon === 'face' && (
                <svg class="w-8 h-8 text-primary group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              )}
              {service.icon === 'mommy' && (
                <svg class="w-8 h-8 text-primary group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"/>
                </svg>
              )}
            </div>

            <!-- Content -->
            <h3 class="relative z-10 font-semibold text-xl text-dark mb-3 group-hover:text-primary transition-colors">
              {service.title}
            </h3>
            <p class="relative z-10 text-dark/60 text-sm leading-relaxed mb-4">
              {service.description}
            </p>

            <!-- Arrow -->
            <div class="relative z-10 flex items-center text-primary font-medium text-sm group-hover:gap-2 transition-all">
              <span>Ver más</span>
              <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            </div>
          </a>
        ))}
      </div>

      <!-- CTA -->
      <div class="text-center mt-12 animate-on-scroll">
        <a href="#contactForm" class="btn-primary scroll-to-contact">
          Agenda Tu Consulta
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- Gallery Section -->
  <div id="galeria">
    <GalleryCarousel
      title="Transformaciones Reales"
      subtitle="Galería de Resultados"
      description="Descubre los resultados excepcionales que hemos logrado para nuestros pacientes"
      showFilters={true}
      showLightbox={true}
    />
  </div>

  <!-- Doctor Section -->
  <section class="w-full bg-cream py-16 md:py-24" data-doctor-section>
    <div class="container-premium">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16 items-center">
        <!-- Image -->
        <div class="relative animate-on-scroll">
          <div class="absolute -top-6 -left-6 w-40 h-40 bg-gold/20 rounded-full blur-3xl"></div>

          <div class="relative">
            <div class="absolute -inset-4 bg-gradient-to-tr from-primary-200 via-primary-100 to-gold/30 rounded-3xl"></div>
            <img
              src="https://lightcyan-monkey-822204.hostingersite.com/wp-content/uploads/2025/05/daniela-1-e1749233759641.png"
              alt="Dra. Daniela Correa - Cirujana Plástica en Medellín"
              class="relative w-full rounded-2xl shadow-2xl"
              loading="lazy"
            />

            <!-- Experience Badge -->
            <div class="absolute -bottom-6 -right-6 bg-white rounded-2xl shadow-xl p-5 border border-primary-100">
              <div class="flex items-center gap-4">
                <div class="w-14 h-14 rounded-full bg-primary flex items-center justify-center">
                  <span class="text-white font-serif text-xl font-bold">10+</span>
                </div>
                <div>
                  <p class="font-semibold text-dark">Años de</p>
                  <p class="text-sm text-dark/60">Experiencia</p>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Content -->
        <div class="animate-on-scroll">
          <span class="inline-flex items-center gap-2 px-4 py-2 bg-primary-100 rounded-full text-sm font-medium text-primary-700 mb-6">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
            </svg>
            Dra. Daniela Correa
          </span>

          <h2 class="font-serif text-3xl md:text-4xl lg:text-5xl font-bold text-dark leading-tight mb-6">
            Cirujana Plástica en <span class="text-primary">Medellín</span>
          </h2>

          <p class="text-lg text-dark/70 leading-relaxed mb-4">
            En <strong class="text-dark">The True You</strong>, nos aseguramos de que tu transformación estética se realice en las mejores condiciones. Te atendemos en uno de los quirófanos más prestigiosos de Colombia, con certificación <strong class="text-dark">Joint Commission International</strong>.
          </p>

          <p class="text-dark/70 leading-relaxed mb-6">
            Nuestro equipo especializado está comprometido en brindarte una experiencia segura y resultados que realcen tu belleza natural de forma armoniosa.
          </p>

          <!-- Specialties -->
          <div class="grid grid-cols-2 gap-3 mb-8">
            {['Cirugías Corporales', 'Cirugías Faciales', 'Cirugías Mamarias', 'Procedimientos No Quirúrgicos'].map(specialty => (
              <div class="flex items-center gap-2 p-3 bg-white rounded-xl shadow-soft">
                <span class="w-8 h-8 rounded-full bg-primary-100 flex items-center justify-center flex-shrink-0">
                  <svg class="w-4 h-4 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                  </svg>
                </span>
                <span class="text-sm font-medium text-dark">{specialty}</span>
              </div>
            ))}
          </div>

          <div class="flex flex-wrap gap-4">
            <a href="/nosotros" class="btn-primary">
              Conoce a la Doctora
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
              </svg>
            </a>
            <a href="#contactForm" class="btn-secondary scroll-to-contact">
              Agendar Consulta
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Process Steps -->
  <ProcessSteps
    title="Tu Proceso de Transformación"
    subtitle="Acompañamiento Integral"
    description="Te acompañamos en cada paso de tu transformación, desde la primera consulta hasta tu recuperación completa."
    variant="horizontal"
    showNumbers={true}
    steps={[
      {
        title: "Consulta de Valoración",
        description: "Agenda tu cita donde evaluaremos tus objetivos y diseñaremos un plan personalizado.",
        icon: "consultation"
      },
      {
        title: "Planificación Detallada",
        description: "Realizamos exámenes prequirúrgicos y definimos cada detalle del procedimiento.",
        icon: "planning"
      },
      {
        title: "Procedimiento",
        description: "Llevamos a cabo la cirugía con la más alta tecnología y los mejores estándares de seguridad.",
        icon: "procedure"
      },
      {
        title: "Recuperación",
        description: "Te acompañamos en tu recuperación con controles regulares hasta ver tus resultados finales.",
        icon: "results"
      }
    ]}
  />

  <!-- CTA Banner -->
  <CTABanner
    title="Da el Primer Paso Hacia Tu Transformación"
    description="Agenda tu consulta de valoración. Estamos aquí para ayudarte a alcanzar tus metas."
    subtitle="Agenda Tu Cita"
    backgroundImage="https://lightcyan-monkey-822204.hostingersite.com/wp-content/uploads/2025/05/estatua-2.webp"
    variant="premium"
    overlay="gradient"
    showTrustBadge={true}
    trustText="Más de 5,000 pacientes satisfechos"
    secondaryButtonText="WhatsApp"
  />

  <!-- Clinics Section -->
  <section class="w-full bg-white py-16 md:py-24" data-clinics-section>
    <div class="container-premium">
      <!-- Header -->
      <div class="text-center mb-12 animate-on-scroll">
        <span class="inline-flex items-center gap-2 px-4 py-2 bg-primary-100 rounded-full text-sm font-medium text-primary-700 mb-4">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
          </svg>
          Nuestras Instalaciones
        </span>

        <h2 class="font-serif text-3xl md:text-4xl lg:text-5xl font-bold text-dark leading-tight mb-4">
          ¿Dónde Realizamos tu <span class="text-primary">Cirugía</span>?
        </h2>

        <p class="text-lg text-dark/70 leading-relaxed max-w-2xl mx-auto">
          Contamos con instalaciones de primer nivel certificadas internacionalmente para tu seguridad y tranquilidad.
        </p>
      </div>

      <!-- Clinic Cards -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 animate-on-scroll">
        {clinics.map((clinic, index) => (
          <div
            class="group relative bg-white rounded-2xl overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-500 border border-primary-100"
            style={`animation-delay: ${index * 150}ms`}
          >
            <!-- Image -->
            <div class="relative h-64 overflow-hidden">
              <img
                src={clinic.image}
                alt={clinic.name}
                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-700"
                loading="lazy"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-dark/60 to-transparent"></div>

              <!-- Badge -->
              <div class="absolute top-4 left-4">
                <span class="inline-flex items-center gap-2 px-3 py-1.5 bg-gold/90 backdrop-blur-sm text-white text-xs font-semibold rounded-full">
                  <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                  </svg>
                  {clinic.badge}
