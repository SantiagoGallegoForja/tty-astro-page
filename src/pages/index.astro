              </div>

              <!-- Location -->
              <div class="absolute bottom-4 left-4">
                <span class="text-white/80 text-sm font-medium">{clinic.location}</span>
                <h3 class="text-white text-2xl font-serif font-bold">{clinic.name}</h3>
