  <!-- Team Section -->
  <section class="w-full bg-cream py-16 md:py-24" data-team-section>
    <div class="container-premium">
      <!-- Header -->
      <div class="text-center mb-12 animate-on-scroll">
        <span class="inline-flex items-center gap-2 px-4 py-2 bg-primary-100 rounded-full text-sm font-medium text-primary-700 mb-4">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z"/>
          </svg>
          Nuestro Equipo
        </span>

        <h2 class="font-serif text-3xl md:text-4xl lg:text-5xl font-bold text-dark leading-tight mb-4">
          Equipo Médico de <span class="text-primary">Excelencia</span>
        </h2>

        <p class="text-lg text-dark/70 leading-relaxed max-w-2xl mx-auto">
          Enamórate del proceso de convertirte en tu mejor versión. Nosotros te ayudamos en cada parte del camino.
        </p>
      </div>

      <!-- Team Cards -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-4xl mx-auto animate-on-scroll">
        {team.map((member, index) => (
          <div
            class="group text-center"
            style={`animation-delay: ${index * 150}ms`}
          >
            <!-- Image -->
            <div class="relative w-64 h-80 mx-auto mb-6">
              <div class="absolute -inset-3 bg-gradient-to-br from-primary-200 via-primary-100 to-gold/30 rounded-3xl group-hover:scale-105 transition-transform duration-500"></div>
              <div class="relative w-full h-full rounded-2xl overflow-hidden shadow-xl">
                <img
                  src={member.image}
                  alt={member.name}
                  class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-700"
                  loading="lazy"
                />
              </div>
            </div>

            <!-- Info -->
            <h3 class="font-serif text-2xl font-bold text-dark mb-1">{member.name}</h3>
            <p class="text-primary font-medium mb-3">{member.role}</p>
            <p class="text-dark/60 text-sm max-w-xs mx-auto">{member.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Contact Form -->
  <ContactForm />

</BaseLayout>

<style>
  /* Animate on scroll */
  .animate-on-scroll {
    opacity: 0;
    transform: translateY(30px);
    transition: opacity 0.8s ease-out, transform 0.8s ease-out;
  }

  [data-intro-section].is-visible .animate-on-scroll,
  [data-services-section].is-visible .animate-on-scroll,
  [data-doctor-section].is-visible .animate-on-scroll,
  [data-clinics-section].is-visible .animate-on-scroll,
  [data-team-section].is-visible .animate-on-scroll {
    opacity: 1;
    transform: translateY(0);
  }

  /* Staggered animations */
  [data-services-section].is-visible .animate-on-scroll:nth-child(2) {
    transition-delay: 0.1s;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const sections = document.querySelectorAll('[data-intro-section], [data-services-section], [data-doctor-section], [data-clinics-section], [data-team-section]');

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('is-visible');
        }
      });
    }, { threshold: 0.1 });

    sections.forEach(section => observer.observe(section));
  });
</script>
