---
import BaseLayout from '@layouts/BaseLayout.astro';
import ContactForm from '@components/ContactForm.astro';

const products = [
  {
    name: "Biometa",
    provider: "THE TRUE YOU",
    sku: "01",
    sizes: ["Sobres"],
    image: "https://thetrueyou.com.co/wp-content/uploads/2025/08/WhatsApp-Image-2025-08-11-at-9.16.02-AM.jpeg",
    description: "Suplemento innovador para el manejo metabólico y control de peso."
  },
  {
    name: "Relax Gel Ultra",
    provider: "VITALITE",
    sku: "02",
    sizes: ["120g"],
    image: "https://thetrueyou.com.co/wp-content/uploads/2025/08/WhatsApp-Image-2025-08-11-at-9.16.03-AM-1.jpeg",
    description: "Gel formulado con una combinación de extractos naturales para alivio muscular."
  },
  {
    name: "Vitamina C",
    provider: "MAGNOFARMA",
    sku: "03",
    sizes: ["100ml"],
    image: "https://thetrueyou.com.co/wp-content/uploads/2025/08/WhatsApp-Image-2025-08-11-at-9.16.04-AM-1.jpeg",
    description: "Suplemento de vitamina C de alta absorción para fortalecer el sistema inmunológico."
  }
];
---

<BaseLayout
  title="Productos Medicina Interna Medellín 2025 | Suplementos | The True You"
  description="Productos de medicina interna en Medellín. Suplementos para manejo metabólico, vitaminas y geles terapéuticos. Recomendados por el Dr. Martín Quirós. Asesoría médica personalizada."
  keywords="suplementos médicos Medellín, productos medicina interna Colombia, Biometa suplemento, vitamina C inyectable, gel muscular, control de peso Medellín, médico internista productos"
>
  <!-- Hero Section -->
  <section class="bg-gradient-to-b from-primary-50 to-white py-16 md:py-20 px-6">
    <div class="max-w-5xl mx-auto text-center">
      <span class="inline-flex items-center gap-2 px-4 py-2 bg-primary-100 rounded-full text-sm font-medium text-primary-700 mb-4">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"/>
        </svg>
        Catálogo Exclusivo
      </span>
      <h1 class="font-serif text-3xl md:text-5xl font-bold text-dark mb-6">Productos de <span class="text-primary">Medicina Interna</span></h1>
      <p class="text-lg text-dark/70 max-w-2xl mx-auto">
        Productos seleccionados para acompañar procesos de salud y recuperación. Recomendados por el Dr. Martín Quirós.
      </p>
    </div>
  </section>

  <!-- Productos Grid -->
  <section class="py-16 px-6 bg-cream">
    <div class="max-w-7xl mx-auto">
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
        {products.map((product) => (
          <article class="group bg-white rounded-2xl overflow-hidden shadow-soft hover:shadow-xl transition-all duration-500 hover:-translate-y-1 border border-primary-100">
            <div class="relative h-64 overflow-hidden bg-gray-50">
              <img
                src={product.image}
                alt={product.name}
                class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
                loading="lazy"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity"></div>
            </div>
            <div class="p-6">
              <p class="text-xs text-primary-600 font-medium mb-1">{product.provider} • ID: {product.sku}</p>
              <h3 class="font-semibold text-dark text-xl mb-2 leading-tight">{product.name}</h3>
              <p class="text-sm text-dark/60 mb-4">{product.description}</p>

              <div class="flex flex-wrap gap-1.5 mb-4">
                {product.sizes.map((size) => (
                  <span class="px-3 py-1.5 text-xs font-medium bg-primary-50 text-primary-700 rounded-full border border-primary-200">
                    {size}
                  </span>
                ))}
              </div>

              <a
                href="#contactForm"
                class="inline-flex items-center gap-2 text-primary font-semibold text-sm hover:text-primary-hover transition-colors scroll-to-contact"
              >
                Consultar precio
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                </svg>
              </a>
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>

  <!-- Info Section -->
  <section class="py-16 px-6 bg-white">
    <div class="max-w-4xl mx-auto">
      <div class="bg-gradient-to-br from-primary-50 to-primary-100/50 rounded-3xl p-8 md:p-12">
        <div class="flex flex-col md:flex-row items-center gap-8">
          <div class="flex-shrink-0">
            <img
              src="https://thetrueyou.com.co/wp-content/uploads/2025/05/martin-1.webp"
              alt="Dr. Martín Quirós"
              class="w-32 h-32 rounded-full object-cover border-4 border-white shadow-lg"
            />
          </div>
          <div>
            <h3 class="font-serif text-2xl font-bold text-dark mb-2">Dr. Martín Quirós</h3>
            <p class="text-primary-600 font-medium mb-4">Médico Internista</p>
            <p class="text-dark/70">
              Especialista en medicina interna con enfoque en el manejo de obesidad, síndrome metabólico y bienestar general.
              Estos productos han sido cuidadosamente seleccionados para complementar los tratamientos médicos de nuestros pacientes.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 px-6 bg-primary-900 text-white">
    <div class="max-w-4xl mx-auto text-center">
      <h2 class="font-serif text-2xl md:text-3xl font-bold mb-4">¿Necesitas asesoría médica?</h2>
      <p class="text-white/80 mb-8">Agenda tu consulta con el Dr. Martín Quirós para una evaluación personalizada.</p>
      <a
        href="https://wa.me/573332841861?text=Hola,%20estoy%20interesad@%20en%20productos%20de%20medicina%20interna"
        target="_blank"
        rel="noopener"
        class="inline-flex items-center gap-2 px-6 py-3 bg-green-500 hover:bg-green-600 text-white font-semibold rounded-full transition-all hover:scale-105"
      >
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
          <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
        </svg>
        Contactar por WhatsApp
      </a>
    </div>
  </section>

  <ContactForm />
</BaseLayout>
